{
  "name": "laudos-app",
  "version": "1.0.0",
  "description": "Aplicativo para geração de laudos médicos",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "prebuild": "rimraf dist",
    "build": "electron-builder --win"
  },
  "keywords": [
    "electron",
    "laudos",
    "médicos"
  ],
  "author": "Guirgds",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3",
    "rimraf": "^5.0.0"
  },
  "dependencies": {
    "docxtemplater": "^3.66.3",
    "docxtemplater-image-module-free": "^1.1.1",
    "pizzip": "^3.2.0",
    "sqlite3": "^5.1.6"
  },
  "build": {
    "appId": "com.laudos.app",
    "productName": "Laudos App",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "database/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "database/data",
        "to": "database/data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Laudos App"
    }
  }
}
